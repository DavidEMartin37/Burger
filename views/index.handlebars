<h1>Eat Da Burger!</h1>

<img id="burgerImage" src="./assets/img/burger.jpeg">

<h2>Burgers that are not devoured</h2>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
    <li>{{burger_name}}

      <button class="devour" value={{id}}>Devoured</button>
    </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that are devoured!</h2>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      <li>{{burger_name}}</li>
    {{/if}}
  {{/each}}
</ul>



<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="burger">Burger Name:</label>
    <input type="text" id="burger" name="burger_name">
  </div>


  <button id="submit" type="submit">Add Burger</button>
</form>